#!/usr/bin/python3

import sys, getopt, os

#convert into executable

def fileExists(path):
    if not os.path.isfile(path):
        print("Please provide a valid file")
        return False
    return True

def main(argv):
    arg = sys.argv[1]
    if arg == "install":
        #install dependencies
        print("no installation needed")
        return 0
    elif arg == "build":
        #complete any compilation
        print("no building needed")
        return 0
    elif arg == "test":
        #run tests
        print("Testing... ")
        os.system("go test -v -cover ./src/go/*")
        print("[DONE]")
        return 0
    else:
        #URL file maybe
        if not fileExists(arg): return 1
        os.system("go run ./src/go/main.go " + arg)
        #os.system("go run ./src/go/main.go ./src/go/ratom/URLs.go " + arg)
        return 0
    return 1

if __name__ == "__main__":
    main(sys.argv)